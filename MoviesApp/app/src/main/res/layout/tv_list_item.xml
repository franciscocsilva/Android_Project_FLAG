<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content"
    android:id="@+id/tv_wrapper">

    <ImageView
        android:clickable="true"
        android:id="@+id/tv_list_item_img"
        android:src="@mipmap/ic_launcher"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_margin="4dp"
            android:id="@+id/tv_list_item_title"
            android:text="TITULO DO FILME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>

        <TextView
            android:layout_margin="4dp"
            android:id="@+id/tv_list_item_date"
            android:text="DATA LANÃ‡AMENTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"/>

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:progressTint="#ffd633"
            android:secondaryProgressTint="#ffd633"
            android:isIndicator="true"
            android:numStars="10"
            android:stepSize="0.1"
            android:rating="0"
            android:layout_margin="4dp"
            android:id="@+id/tv_list_item_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>